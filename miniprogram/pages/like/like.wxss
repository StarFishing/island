/* pages/like/like.wxss */
.old-cover-wrapper {
  position: relative;
  overflow: hidden;
}
.old-cover-wrapper .cover-bg-img {
  width: 100%;
  height: 500rpx;
}
.bg-rotat {
  height: 500rpx;
  background: #ffffff;
  transform: rotate(-10deg);
  position: absolute;
  top: 250rpx;
  left: 0;
  right: 0;
  width: 1000rpx;
}
.old-cover-wrapper .old-cover-text {
  position: absolute;
  top: 250rpx;
  background: white;
}
.old-cover-avatar {
  position: absolute;
  top: 50%;
  left: 50%;
  color: #ffffff;
  width: 100rpx;
  height: 100rpx;
  margin-left: -50rpx;
  margin-top: -50rpx;
  border-radius: 50%;
  background: #f1f1f2;
  line-height: 50rpx;
  text-align: center;
  color: #000000;
  z-index: 2;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}
