/* components/header-bar/header-bar.wxss */
@import '/style/base.wxss';
.island-header-bar {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  padding: 0 20rpx;
}
.header-bar-time,
.header-bar-option {
  display: flex;
  align-items: center;
}
.header-bar-time .time-title {
  color: rgba(38, 38, 48, 0.5);
  font-size: 32rpx;
  margin-top: 10rpx;
}
.header-bar-time .time-day {
  font-weight: 700;
  font-size: 48rpx;
}
.header-bar-time .divider {
  margin: 0 16rpx;
  height: 40rpx;
  width: 2rpx;
  background-color: rgba(38, 38, 48, 0.5);
}
.time-fullyear {
  font-size: 20rpx;
  color: rgba(38, 38, 48, 0.5);
  display: flex;
  flex-direction: column;
  text-align: center;
}
.header-bar-option .option-like {
  position: relative;
  margin-right: 90rpx;
}
.header-bar-option .like-badge {
  position: absolute;
  color: rgba(38, 38, 48, 0.5);
  top: -10rpx;
  left: 34rpx;
  font-size: 24rpx;
}
.share-icon {
  width: 26rpx;
  height: 26rpx;
}
